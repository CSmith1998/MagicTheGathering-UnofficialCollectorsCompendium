@using MtG_UCC.Models.Scryfall_Search

<div class="container-fluid m-3 p-0">
    <h1 class="Handwritten text-center Plains_pFG my-3">Magic: The Gathering - Unofficial Collector's Compendium</h1>
    <div class="container-fluid my-5">
        <div class="container mx-auto my-3">
            <article class="m-3 AdjustedBacking">
                <div class="container mb-3">
                    <h3 class="my-3 pt-3 text-center Plains_pFG">Welcome to MtG: UCC, the premiere solution for all of your collection catologuing needs!</h3>

                    <h4 class="my-3">&nbsp; Born out of an intense desire for a cataloguing solution that offers more customizability and less hassle, our site makes use of the Scryfall database to ensure that you are always primed to document your collection, no matter how new the card!</h4>

                    @*<h4 class="my-3">&nbsp; For newer users, please take a moment to browse around the site and look over our help documentation until you're ready to take the plunge and register with us. You may be surprised at some of the details you'll find!</h4>
                </div>
                <div class="container-fluid text-center my-3">
                    <a class="mt-3 mb-5 btn btn-lg rounded-pill Plains_BG tooltips" data-placement="top" title="Helpful information to help you navigate!" asp-action="HelpDocumentation" asp-controller="Home">About Our Site</a>
                </div>*@
            </article>
            <aside class="mx-3 mb-3 p-3 AdjustedBacking">
                <h4 class="my-3 text-center">If you'd prefer to immediately dive into cateloguing your collection, go ahead and sign in or register!</h4>
                <div class="d-flex flex-row justify-content-around align-content-center">
                    <div class="d-flex flex-column w-25 justify-content-center">
                        <a class="btn btn-lg rounded-pill Islands_FG my-3 tooltips" data-placement="top" title="Register as a New User" asp-area="Identity" asp-page="/Account/Register">Grasp Your Spark!</a>
                    </div>
                    <div class="d-flex flex-column w-25 justify-content-center">
                        <a class="btn btn-lg rounded-pill Forests_FG my-3 tooltips1x" data-placement="top" title="Login to your account" asp-area="Identity" asp-page="/Account/Login">Return to your Scrolls!</a>
                    </div>
                </div>

                <h5 class="my-3 text-center">Of course, you're also welcome to search the Scryfall database without registering as well. Click below to Planeswalk to the search page!</h5>

                <div class="container my-3 text-center">
                    <a class=" btn btn-lg px-5 w-25 Mountains_FG tooltips" data-placement="top" title="Search for cards" asp-action="Search" asp-controller="Scryfall">Planeswalk!</a>
                </div>
            </aside>
        </div>
    </div>
</div>